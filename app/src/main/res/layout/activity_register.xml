<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/usuarioRegistro3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="132dp"
                android:text="Contraseña"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/usuarioRegistro"
                app:layout_constraintTop_toBottomOf="@+id/creacioncategoria"
                app:layout_constraintVertical_bias="0.028" />

            <EditText
                android:id="@+id/contraseñaRegistro"
                android:layout_width="172dp"
                android:layout_height="38dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:hint="Contraseña"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/usuarioRegistro3"
                app:layout_constraintTop_toBottomOf="@+id/usuarioRegistro3" />

            <EditText
                android:id="@+id/idNombre"
                android:layout_width="347dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Nombre del usuario"
                android:inputType="textMultiLine"
                android:singleLine="false"
                app:layout_constraintStart_toStartOf="@+id/usuarioRegistro2"
                app:layout_constraintTop_toBottomOf="@+id/usuarioRegistro2" />

            <TextView
                android:id="@+id/usuarioRegistro2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nombre"
                app:layout_constraintStart_toStartOf="@+id/idUsuario"
                app:layout_constraintTop_toBottomOf="@+id/idUsuario" />

            <EditText
                android:id="@+id/idCarrera"
                android:layout_width="347dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Carrera que está realizando"
                android:inputType="textMultiLine"
                android:singleLine="false"
                app:layout_constraintStart_toStartOf="@+id/textview7"
                app:layout_constraintTop_toBottomOf="@+id/textview7" />

            <TextView
                android:id="@+id/textview7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Carrera"
                app:layout_constraintStart_toStartOf="@+id/idUniversidadRegistro"
                app:layout_constraintTop_toBottomOf="@+id/idUniversidadRegistro" />

            <EditText
                android:id="@+id/idUsuario"
                android:layout_width="161dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textMultiLine"
                android:singleLine="false"
                app:layout_constraintStart_toStartOf="@+id/usuarioRegistro"
                app:layout_constraintTop_toBottomOf="@+id/usuarioRegistro" />

            <EditText
                android:id="@+id/idBiografiaRegistro"
                android:layout_width="352dp"
                android:layout_height="74dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Biografía del usuario"
                android:inputType="textLongMessage|textAutoCorrect|textMultiLine"
                android:singleLine="false"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Biografía"
                app:layout_constraintStart_toStartOf="@+id/idNombre"
                app:layout_constraintTop_toBottomOf="@+id/idNombre" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Universidad"
                app:layout_constraintStart_toStartOf="@+id/idBiografiaRegistro"
                app:layout_constraintTop_toBottomOf="@+id/idBiografiaRegistro" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="124dp"
                android:layout_marginTop="28dp"
                android:text="Curso"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/idBiografiaRegistro" />

            <EditText
                android:id="@+id/idCurso"
                android:layout_width="147dp"
                android:layout_height="67dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Curso que está realizando (Número)"
                android:inputType="textMultiLine"
                android:singleLine="false"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/idUniversidadRegistro"
                android:layout_width="178dp"
                android:layout_height="68dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Universidad donde cursa"
                android:inputType="textMultiLine"
                android:singleLine="false"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/creacioncategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creando un usuario"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.022" />

            <TextView
                android:id="@+id/usuarioRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/creacioncategoria"
                app:layout_constraintTop_toBottomOf="@+id/creacioncategoria"
                app:layout_constraintVertical_bias="0.028" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="28dp"
                android:text="Cancelar"
                app:layout_constraintEnd_toStartOf="@+id/btnOk"
                app:layout_constraintTop_toBottomOf="@+id/idCarrera" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="Registrar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idCarrera" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>